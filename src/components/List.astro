---
interface Props {
	title: string;
	body: string;
	href: string;
	imagen: string;
}

const { href, title, body, imagen} = Astro.props;
---
<li class="link-list">
    <a href={href} target="_blank">
		<h2>
			{title}
			<span>üòÆ‚Äçüí®</span>
		</h2>
		<p>
			{body}
			<img src={imagen}> 
		</p>
	</a>
</li>

<style>
	.link-list {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-list > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-list:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient2);
	}
	.link-list:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light2));
	}
	img {
		position: relative;
		left: 200px;
		bottom: 15px;
		width: 35%;
		height: 35%;
		
	}
</style>
